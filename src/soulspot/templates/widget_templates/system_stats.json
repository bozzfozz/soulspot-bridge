{
  "id": "system_stats",
  "type": "system_stats",
  "is_enabled": true,
  "is_system": false,
  "config": {
    "name": "System Stats",
    "description": "Display system resource usage (CPU, Memory, Disk)",
    "version": "1.0.0",
    "author": "Community",
    "template_path": "partials/widgets/system_stats.html",
    "icon": "chip",
    "category": "monitoring",
    "supports_config": true,
    "config_schema": {
      "update_interval": {
        "type": "number",
        "min": 1,
        "max": 60,
        "default": 5,
        "description": "Update interval in seconds"
      },
      "show_cpu": {
        "type": "boolean",
        "default": true,
        "description": "Show CPU usage"
      },
      "show_memory": {
        "type": "boolean",
        "default": true,
        "description": "Show memory usage"
      },
      "show_disk": {
        "type": "boolean",
        "default": true,
        "description": "Show disk usage"
      }
    },
    "default_config": {
      "update_interval": 5,
      "show_cpu": true,
      "show_memory": true,
      "show_disk": true
    },
    "default_span_cols": 4,
    "min_span_cols": 4,
    "max_span_cols": 12,
    "data_endpoint": "/api/ui/widgets/system-stats/content",
    "supports_sse": false,
    "sse_events": [],
    "poll_interval": 5,
    "requires_auth": false,
    "permissions": [],
    "tags": ["system", "monitoring", "performance"]
  }
}
