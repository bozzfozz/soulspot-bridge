{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "title": "Harmony-v1 Inspired Color Tokens",
  "description": "Color palette extracted from harmony-v1 backup project, based on Wizarr theme",
  "colors": {
    "brand": {
      "primary": {
        "base": "#fe4155",
        "hover": "#982633",
        "description": "Main brand color - vibrant red/pink from Wizarr"
      },
      "secondary": {
        "base": "#533c5b",
        "hover": "#332538",
        "description": "Secondary brand color - deep purple"
      },
      "blue": {
        "primary": "#3b82f6",
        "secondary": "#1d4ed8",
        "description": "Blue accent colors"
      }
    },
    "semantic": {
      "success": {
        "light": "#10b981",
        "dark": "#34d399",
        "description": "Success state - green"
      },
      "warning": {
        "light": "#f59e0b",
        "dark": "#fbbf24",
        "description": "Warning state - amber/orange"
      },
      "danger": {
        "light": "#ef4444",
        "dark": "#f87171",
        "description": "Error/danger state - red"
      },
      "info": {
        "light": "#3b82f6",
        "dark": "#60a5fa",
        "description": "Info state - blue"
      }
    },
    "neutral": {
      "light": {
        "bg": "#f9fafb",
        "surface": "#ffffff",
        "surface-alt": "#f3f4f6",
        "border": "#e5e7eb",
        "text": "#111827",
        "text-muted": "#6b7280"
      },
      "dark": {
        "bg": "#111827",
        "surface": "#1f2937",
        "surface-alt": "#374151",
        "border": "#4b5563",
        "text": "#f9fafb",
        "text-muted": "#9ca3af"
      }
    },
    "gray": {
      "50": "#f9fafb",
      "100": "#f3f4f6",
      "200": "#e5e7eb",
      "300": "#d1d5db",
      "400": "#9ca3af",
      "500": "#6b7280",
      "600": "#4b5563",
      "700": "#374151",
      "800": "#1f2937",
      "900": "#111827"
    }
  }
}
