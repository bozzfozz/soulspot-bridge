{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "title": "Harmony-v1 Inspired Typography Tokens",
  "description": "Typography system extracted from harmony-v1 backup project",
  "typography": {
    "fontFamily": {
      "sans": [
        "Inter",
        "-apple-system",
        "BlinkMacSystemFont",
        "Segoe UI",
        "system-ui",
        "sans-serif"
      ],
      "mono": [
        "SFMono-Regular",
        "Consolas",
        "Liberation Mono",
        "Menlo",
        "Courier",
        "monospace"
      ],
      "description": "Inter is the preferred font, falling back to system fonts"
    },
    "fontSize": {
      "xs": {
        "size": "0.75rem",
        "lineHeight": "1.5",
        "pixels": "12px"
      },
      "sm": {
        "size": "0.875rem",
        "lineHeight": "1.5",
        "pixels": "14px"
      },
      "base": {
        "size": "1rem",
        "lineHeight": "1.5",
        "pixels": "16px"
      },
      "lg": {
        "size": "1.125rem",
        "lineHeight": "1.5",
        "pixels": "18px"
      },
      "xl": {
        "size": "1.25rem",
        "lineHeight": "1.25",
        "pixels": "20px"
      },
      "2xl": {
        "size": "1.5rem",
        "lineHeight": "1.25",
        "pixels": "24px"
      },
      "3xl": {
        "size": "1.875rem",
        "lineHeight": "1.25",
        "pixels": "30px"
      },
      "4xl": {
        "size": "2.25rem",
        "lineHeight": "1.25",
        "pixels": "36px"
      }
    },
    "fontWeight": {
      "normal": 400,
      "medium": 500,
      "semibold": 600,
      "bold": 700
    },
    "lineHeight": {
      "tight": 1.25,
      "normal": 1.5,
      "relaxed": 1.625
    },
    "letterSpacing": {
      "tight": "-0.025em",
      "normal": "0",
      "wide": "0.025em",
      "wider": "0.05em"
    }
  },
  "spacing": {
    "xs": "0.25rem",
    "sm": "0.5rem",
    "md": "1rem",
    "lg": "1.5rem",
    "xl": "2rem",
    "2xl": "2.5rem"
  },
  "borderRadius": {
    "sm": "0.25rem",
    "md": "0.5rem",
    "lg": "0.75rem",
    "xl": "1rem",
    "full": "9999px"
  },
  "shadows": {
    "sm": "0 1px 2px 0 rgba(0, 0, 0, 0.05)",
    "md": "0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06)",
    "lg": "0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05)",
    "xl": "0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04)"
  },
  "transitions": {
    "fast": "150ms ease-in-out",
    "normal": "200ms ease-in-out",
    "slow": "300ms ease-in-out"
  }
}
