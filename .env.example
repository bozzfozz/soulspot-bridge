# =============================================================================
# SoulSpot Bridge - Environment Configuration
# =============================================================================
# Copy this file to .env and adjust the values for your environment
# Profile: simple (SQLite, no external queue) or standard (PostgreSQL, Redis)

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
APP_NAME=SoulSpot Bridge
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# -----------------------------------------------------------------------------
# Security
# -----------------------------------------------------------------------------
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=change-me-to-a-random-secret-key-in-production

# -----------------------------------------------------------------------------
# Database Configuration (SQLite)
# -----------------------------------------------------------------------------
DATABASE_URL=sqlite+aiosqlite:///./soulspot.db

# -----------------------------------------------------------------------------
# slskd Configuration
# -----------------------------------------------------------------------------
SLSKD_URL=http://localhost:5030
SLSKD_USERNAME=admin
SLSKD_PASSWORD=changeme
SLSKD_API_KEY=

# -----------------------------------------------------------------------------
# Spotify Configuration (OAuth PKCE)
# -----------------------------------------------------------------------------
SPOTIFY_CLIENT_ID=
SPOTIFY_CLIENT_SECRET=
SPOTIFY_REDIRECT_URI=http://localhost:8000/auth/spotify/callback

# -----------------------------------------------------------------------------
# MusicBrainz Configuration
# -----------------------------------------------------------------------------
MUSICBRAINZ_APP_NAME=SoulSpot-Bridge
MUSICBRAINZ_APP_VERSION=0.1.0
MUSICBRAINZ_CONTACT=

# -----------------------------------------------------------------------------
# File Storage
# -----------------------------------------------------------------------------
DOWNLOAD_PATH=./downloads
MUSIC_PATH=./music
ARTWORK_PATH=./artwork
TEMP_PATH=./tmp

# -----------------------------------------------------------------------------
# API Configuration
# -----------------------------------------------------------------------------
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1
API_SECURE_COOKIES=false  # Set to true in production with HTTPS

# -----------------------------------------------------------------------------
# CORS Configuration
# -----------------------------------------------------------------------------
CORS_ORIGINS=http://localhost:8000,http://localhost:3000
CORS_ALLOW_CREDENTIALS=true
